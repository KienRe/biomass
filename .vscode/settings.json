{
  // ESLint settings
  "eslint.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.lintTask.options": "--config Config/Linting/eslint.config.mjs",
  "eslint.options": { "overrideConfigFile": "Config/Linting/eslint.config.mjs" },
  "eslint.format.enable": true,
  "eslint.run": "onSave",
  "eslint.validate": ["javascript","typescript"],
  "eslint.useFlatConfig": true,

  // Only format once via code action
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": { "source.fixAll.eslint": "always" },

  // Enable ESLint for JavaScript and TypeScript as default formatter
  "[javascript]": { "editor.defaultFormatter": "dbaeumer.vscode-eslint" },
  "[typescript]": { "editor.defaultFormatter": "dbaeumer.vscode-eslint" },

  // TypeScript specific
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.importModuleSpecifier": "shortest",

  // File cleanup
  "files.exclude": 
  {
    "**/node_modules": true,
    "**/.next": true,
    "**/next-env.d.ts": true,
    "**/out": true
  },

  // Search settings
  "search.exclude": 
  {
    "**/node_modules": true,
    "**/.next": true,
    "**/out": true
  },

  // Editor appearance
  "editor.bracketPairColorization.enabled": true,

  // Tailwind CSS
  "css.validate": false,
  "editor.quickSuggestions": 
  {
    "strings": true
  }
}