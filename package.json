{
  "name": "biomass",
  "version": "0.1.0",
  "private": true,
  "scripts": 
  {
    "dev": "next dev --turbopack",
    "build": "next build",
	"build:local": "set NODE_ENV=development && next build",
	"build:wsl": "wsl bash -ic \"cd $(wslpath '%cd%') && npm ci && npm run build\"",
    "start": "npx serve@latest out",
    "test": "vitest --config Tests/Config/vitest.config.mts",
	"test:wsl": "wsl bash -ic \"cd $(wslpath '%cd%') && npm ci && npm run test\"",
    "format": "eslint . --config Config/Linting/eslint.config.mjs --fix --format stylish",
    "format:check": "eslint . --config Config/Linting/eslint.config.mjs --format stylish",
    "format:inspect": "eslint . --config Config/Linting/eslint.config.mjs --inspect-config",
    "predeploy": "node Scripts/DeployCheck.js && npm run build",
    "deploy": "gh-pages -d out"
  },
  "dependencies": 
  {
    "next": "15.1.0",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": 
  {
    "typescript": "5.7.2",
    "@types/node": "22.10.2",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.2",
    "@types/eslint-plugin-tailwindcss": "3.17.0",
    "@types/eslint-plugin-security": "3.0.0",

    "gh-pages": "6.2.0",

    "tailwindcss": "3.4.16",
    "autoprefixer": "10.4.20",
    "postcss": "8.4.49",

    "vitest": "2.1.8",
    "jsdom": "25.0.1",
    "@vitejs/plugin-react": "4.3.4",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@testing-library/user-event": "14.5.2",

    "eslint": "9.17.0",
    "@eslint/compat": "1.2.4",
    "typescript-eslint": "8.18.0",
    "globals": "15.13.0",
    "@stylistic/eslint-plugin-js" : "2.12.1",
    "@stylistic/eslint-plugin-ts" : "2.12.1",
    "@stylistic/eslint-plugin-jsx" : "2.12.1",
    "@next/eslint-plugin-next": "15.1.0",
    "@vitest/eslint-plugin": "1.1.16",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-depend": "0.12",
    "eslint-plugin-no-unsanitized": "4.1.2",
    "eslint-plugin-tailwindcss": "3.17.5",
    "eslint-plugin-react-perf": "3.3.3",
    "eslint-plugin-react-refresh": "0.4.16",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-unicorn": "56.0.1"
  },
  "engines": 
  {
    "node": "22.12.0"
  },
  "postcss":
  {
    "plugins":
    {
      "tailwindcss": "./Config/Styling/tailwind.config.ts",
      "autoprefixer": {}
    }
  },
  "homepage": "https://kienre.github.io/biomass/"
}
